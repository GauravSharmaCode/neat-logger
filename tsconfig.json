{
  "compilerOptions": {
    "target": "es2020",                          
    "module": "commonjs",                        
    "moduleResolution": "node",                  
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,        
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]                            
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
