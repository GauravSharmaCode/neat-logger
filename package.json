{
  "name": "@gauravsharmacode/neat-logger",
  "version": "1.1.0",
  "private": false,
  "description": "Production-grade structured logger for Node.js apps using Winston",
  "author": "Gaurav Sharma",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gauravsharmacode/neat-logger.git"
  },
  "keywords": [
    "logger",
    "winston",
    "nodejs",
    "typescript",
    "structured-logging"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "typescript": "^5.9.2"
  },
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}